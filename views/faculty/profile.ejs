<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - Sherubtse College</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/faculty-header') %>

  <main class="container py-4">
    <% if (locals.success_msg) { %>
      <div class="alert alert-success" role="alert">
        <%= success_msg %>
      </div>
    <% } %>
    
    <% if (locals.error_msg) { %>
      <div class="alert alert-danger" role="alert">
        <%= error_msg %>
      </div>
    <% } %>

    <div class="row">
      <div class="col-md-12 mb-4">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Faculty Profile</h5>
            <span class="badge bg-primary">Faculty</span>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-3 text-center mb-4 mb-md-0">
                <img src="/img/profile-placeholder.png" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="max-width: 150px;">
                <form id="photo-form" enctype="multipart/form-data" class="mt-2">
                  <label for="profile-photo" class="btn btn-sm btn-outline-primary mb-2">Change Photo</label>
                  <input type="file" id="profile-photo" name="profilePhoto" accept="image/*" class="d-none">
                  <div id="upload-status" class="small text-muted mt-1"></div>
                </form>
              </div>
              <div class="col-md-9">
                <form id="profile-form">
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="name" class="form-label">Full Name</label>
                      <input type="text" class="form-control" id="name" value="<%= user.name %>" required>
                    </div>
                    <div class="col-md-6">
                      <label for="email" class="form-label">Email</label>
                      <input type="email" class="form-control" id="email" value="<%= user.email %>" readonly>
                    </div>
                  </div>
                  
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="department" class="form-label">Department</label>
                      <select class="form-select" id="department">
                        <option value="DOAH" selected>Department of Arts and Humanities (DOAH)</option>
                        <option value="DOSS">Department of Social Sciences (DOSS)</option>
                        <option value="DOELS">Department of Environment & Life Science (DOELS)</option>
                        <option value="DOPS">Department of Physical Science (DOPS)</option>
                        <option value="DOMS">Department of Mathematical Sciences (DOMS)</option>
                      </select>
                    </div>
                    <div class="col-md-6">
                      <label for="designation" class="form-label">Designation</label>
                      <select class="form-select" id="designation">
                        <option value="Professor">Professor</option>
                        <option value="Associate Professor" selected>Associate Professor</option>
                        <option value="Assistant Professor">Assistant Professor</option>
                        <option value="Lecturer">Lecturer</option>
                      </select>
                    </div>
                  </div>
                  
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <label for="phone" class="form-label">Phone Number</label>
                      <input type="tel" class="form-control" id="phone" value="975-17123456">
                    </div>
                    <div class="col-md-6">
                      <label for="office" class="form-label">Office Location</label>
                      <input type="text" class="form-control" id="office" value="Academic Block 2, Room 304">
                    </div>
                  </div>
                  
                  <div class="mb-3">
                    <label for="bio" class="form-label">Bio</label>
                    <textarea class="form-control" id="bio" rows="3">Associate Professor with 10+ years of experience teaching Computer Science courses. Specializes in Data Structures, Algorithms, and Database Systems.</textarea>
                  </div>
                  
                  <hr class="my-4">
                  
                  <h6 class="mb-3">Change Password</h6>
                  <div class="row mb-3">
                    <div class="col-md-4">
                      <label for="current-password" class="form-label">Current Password</label>
                      <input type="password" class="form-control" id="current-password">
                    </div>
                    <div class="col-md-4">
                      <label for="new-password" class="form-label">New Password</label>
                      <input type="password" class="form-control" id="new-password">
                    </div>
                    <div class="col-md-4">
                      <label for="confirm-password" class="form-label">Confirm New Password</label>
                      <input type="password" class="form-control" id="confirm-password">
                    </div>
                  </div>
                  
                  <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">My Courses</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Course Code</th>
                    <th>Course Name</th>
                    <th>Students</th>
                    <th>Average Attendance</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>CSC101</td>
                    <td>Introduction to Computer Science</td>
                    <td>45</td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="progress flex-grow-1 me-2" style="height: 8px;">
                          <div class="progress-bar bg-success" role="progressbar" style="width: 89%"></div>
                        </div>
                        <span>89%</span>
                      </div>
                    </td>
                    <td>
                      <button class="btn btn-sm btn-outline-primary me-1">View</button>
                      <button class="btn btn-sm btn-outline-secondary">Generate QR</button>
                    </td>
                  </tr>
                  <tr>
                    <td>CSC202</td>
                    <td>Data Structures and Algorithms</td>
                    <td>38</td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="progress flex-grow-1 me-2" style="height: 8px;">
                          <div class="progress-bar bg-success" role="progressbar" style="width: 92%"></div>
                        </div>
                        <span>92%</span>
                      </div>
                    </td>
                    <td>
                      <button class="btn btn-sm btn-outline-primary me-1">View</button>
                      <button class="btn btn-sm btn-outline-secondary">Generate QR</button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Profile form submission
      const profileForm = document.getElementById('profile-form');
      
      profileForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // In a real implementation, this would call your API
        // For this example, we'll just show an alert
        alert('Profile updated successfully!');
      });
    });

    document.addEventListener('DOMContentLoaded', function() {
      // Profile photo change
      const photoInput = document.getElementById('profile-photo');
      const uploadStatus = document.getElementById('upload-status');
      const profileImage = document.querySelector('img.rounded-circle') || document.querySelector('img.img-fluid');
      
      photoInput.addEventListener('change', function(e) {
        if (!this.files || !this.files[0]) return;
        
        const file = this.files[0];
        // Check file size (max 5MB)
        if (file.size > 5 * 1024 * 1024) {
          uploadStatus.textContent = 'File is too large. Maximum size is 5MB.';
          uploadStatus.className = 'small text-danger mt-1';
          return;
        }
        
        // Check file type
        if (!file.type.match('image.*')) {
          uploadStatus.textContent = 'Please select an image file.';
          uploadStatus.className = 'small text-danger mt-1';
          return;
        }
        
        uploadStatus.textContent = 'Uploading...';
        uploadStatus.className = 'small text-muted mt-1';
        
        // Create FormData
        const formData = new FormData();
        formData.append('profilePhoto', file);
        
        // In a real implementation, send to server
        // For now, just show a preview
        const reader = new FileReader();
        reader.onload = function(e) {
          profileImage.src = e.target.result;
          uploadStatus.textContent = 'Photo updated successfully!';
          uploadStatus.className = 'small text-success mt-1';
          
          // In a real implementation, you would send the formData to the server here
          // fetch('/api/upload-profile-photo', {
          //   method: 'POST',
          //   body: formData
          // })
          // .then(response => response.json())
          // .then(data => {
          //   if (data.success) {
          //     profileImage.src = data.photoUrl;
          //     uploadStatus.textContent = 'Photo updated successfully!';
          //     uploadStatus.className = 'small text-success mt-1';
          //   } else {
          //     uploadStatus.textContent = data.message || 'Failed to upload photo.';
          //     uploadStatus.className = 'small text-danger mt-1';
          //   }
          // })
          // .catch(error => {
          //   console.error('Error:', error);
          //   uploadStatus.textContent = 'An error occurred while uploading.';
          //   uploadStatus.className = 'small text-danger mt-1';
          // });
          
          // After 3 seconds, clear the status
          setTimeout(() => {
            uploadStatus.textContent = '';
          }, 3000);
        };
        reader.readAsDataURL(file);
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
